	else
		status.Text = "ÿßŸÑÿ≠ÿßŸÑÿ©: ŸÅÿ¥ŸÑ ÿßŸÑÿ•ÿ±ÿ≥ÿßŸÑ (" .. tostring(err) .. ")"
	end
end)
local delayBetween = 10
local maxMessagesPerUse = 5
local recentSends = {}
local function canSendNow()
	local now = tick()
	local window = 600
	local allowedInWindow = 10
	for i = #recentSends, 1, -1 do
		if recentSends[i] < now - window then
			table.remove(recentSends, i)
		end
	end
	return #recentSends < allowedInWindow
end
sendFiveBtn.MouseButton1Click:Connect(function()
	local text = box.Text
	if text == "" then
		status.Text = "ÿßŸÑÿ≠ÿßŸÑÿ©: ÿßŸÑÿµŸÜÿØŸàŸÇ ŸÅÿßÿ±ÿ∫."
		return
	end
	if not canSendNow() then
		status.Text = "ÿßŸÑÿ≠ÿßŸÑÿ©: ÿ™ŸÖ ÿßŸÑŸàÿµŸàŸÑ ŸÑŸÑÿ≠ÿØ ÿßŸÑŸÖÿ≥ŸÖŸàÿ≠ ÿ®Ÿá ŸÖÿ§ŸÇÿ™Ÿãÿß. ÿßŸÜÿ™ÿ∏ÿ± ŸÇŸÑŸäŸÑÿßŸã."
		return
	end
	status.Text = "ÿßŸÑÿ≠ÿßŸÑÿ©: ÿ®ÿØÿ° ŸÖÿ≠ÿßŸàŸÑÿ© ÿ•ÿ±ÿ≥ÿßŸÑ ÿ≠ÿ™Ÿâ " .. tostring(maxMessagesPerUse) .. " ÿ±ÿ≥ÿßÿ¶ŸÑ (ŸÖÿπ ÿ™ÿ£ÿÆŸäÿ±)."
	spawn(function()
		for i = 1, maxMessagesPerUse do
			if not canSendNow() then
				status.Text = "ÿßŸÑÿ≠ÿßŸÑÿ©: ÿ™ŸàŸÇŸÅÿ™ ‚Äî ÿ™ŸÖ ÿßŸÑŸàÿµŸàŸÑ ŸÑŸÑÿ≠ÿØ ÿßŸÑŸÖÿ≥ŸÖŸàÿ≠ ÿ®Ÿá."
				return
			end
			local ok, err = safeSend(text)
			if ok then
				table.insert(recentSends, tick())
				status.Text = string.format("ÿßŸÑÿ≠ÿßŸÑÿ©: ÿ£ÿ±ÿ≥ŸÑÿ™ %d/%d", i, maxMessagesPerUse)
			else
				status.Text = "ÿßŸÑÿ≠ÿßŸÑÿ©: ŸÅÿ¥ŸÑ ÿßŸÑÿ•ÿ±ÿ≥ÿßŸÑ (" .. tostring(err) .. ")"
				return
			end
			if i < maxMessagesPerUse then
				wait(delayBetween)
			end
		end
		status.Text = "ÿßŸÑÿ≠ÿßŸÑÿ©: ÿßŸÜÿ™Ÿáÿ™ ÿπŸÖŸÑŸäÿ© ÿßŸÑÿ•ÿ±ÿ≥ÿßŸÑ (ÿßŸÑÿ¢ŸÖŸÜÿ©)."
	end)
end)
